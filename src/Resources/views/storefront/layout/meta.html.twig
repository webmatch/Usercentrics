{% sw_extends '@Storefront/storefront/layout/meta.html.twig' %}

{% block layout_head_meta_tags_viewport %}
    {% if app.environment == 'dev' and WebmatchUsercentrics.isLocalhost %}
        <script type="text/javascript">
            window["usercentrics"] = {
                paths: {
                    "bundle": "https://app.usercentrics.eu/latest/loader.js",
                    "iabIframe": "https://usercentrics.mgr.consensu.org/sit/consensuIframeIndex.html",
                    "crossDomainConsentSharingIFrame": "https://app.usercentrics.eu/latest/cdcs-iframe-index.html"
                },
                settingsId: '{{ WebmatchUsercentrics.settingsId }}'
            }
        </script>
    {% endif %}
    {% if WebmatchUsercentrics.version == 'v2' %}
        <script id="usercentrics-cmp" data-settings-id="{{ WebmatchUsercentrics.settingsId }}" src="https://app.usercentrics.eu/browser-ui/latest/loader.js" async></script>
    {% else %}
        <script type="application/javascript" src="https://app.usercentrics.eu/latest/main.js" id="{{ WebmatchUsercentrics.settingsId }}"></script>
    {% endif %}
    {{ parent() }}
{% endblock %}
